<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/granite_gray" />
            <corners android:radius="32dp" />
            <size
                android:width="192dp"
                android:height="48dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="@color/shiny_yellow_green"
                    android:endColor="@color/indian_green"
                    android:startColor="@color/pale_red" />
                <corners android:radius="35dip" />
                <size
                    android:width="192dp"
                    android:height="48dp" />
            </shape>
        </clip>
    </item>
</layer-list>